# Homeboi Configuration Template
# Copy to `settings.env` and fill in values, or run the Homeboi wizard.

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

HOMEBOI_USERNAME=admin
HOMEBOI_PASSWORD=change_me
HOMEBOI_EMAIL=admin@example.com
SERVER_IP=192.168.1.100
TIMEZONE=UTC
HOSTNAME=homeboi

# Authentication
ENABLE_ARR_AUTH=true

# Primary Setup (jellyfin|plex) and (jellyseerr|overseerr)
PRIMARY_MEDIA_SERVER=jellyfin
PRIMARY_REQUEST_APP=jellyseerr

# Home Automation
enable_home_assistant=false

# =============================================================================
# MEDIA STORAGE PATHS
# =============================================================================

MOVIES_PATH=/mnt/media/movies
TV_SHOWS_PATH=/mnt/media/tv
DOWNLOADS_PATH=/mnt/media/downloads

# =============================================================================
# VPN CONFIGURATION (optional)
# =============================================================================

VPN_SERVICE_PROVIDER=
OPENVPN_USER=
OPENVPN_PASSWORD=

# =============================================================================
# INDEXER CONFIGURATION (optional)
# =============================================================================

NZBGEEK_API=

# =============================================================================
# SETUP STATUS
